<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="true"
    android:orientation="vertical"
    tools:context=".ToDoDetailActivity">

    <TextView
        android:id="@+id/Title"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_weight="3"
        android:fontFamily="sans-serif-black"
        android:text="Create ToDo"
        android:textAlignment="center"
        android:textSize="34sp"
        android:typeface="sans" />

    <RelativeLayout
        android:id="@+id/rlTitleToDo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Title"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="6dp">

        <TextView
            android:id="@+id/tvTitleEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="14dp"
            android:layout_marginTop="19dp"
            android:layout_marginEnd="14dp"
            android:fontFamily="sans-serif-light"
            android:text="Title:"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/etInputTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="-10dp"
            android:layout_marginTop="12dp"
            android:layout_toEndOf="@id/tvTitleEdit"
            android:ems="10"
            android:fontFamily="sans-serif-light"
            android:hint="Title name"
            android:inputType="textPersonName"
            android:textSize="17sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlDescriptionToDo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rlTitleToDo"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="3dp">

        <TextView
            android:id="@+id/tvDescriptionEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="14dp"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="14dp"
            android:fontFamily="sans-serif-light"
            android:text="Description:"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/etInputDescription"
            android:layout_width="367dp"
            android:layout_height="156dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="14dp"
            android:layout_marginTop="41dp"
            android:ems="10"
            android:fontFamily="sans-serif-light"
            android:gravity="start"
            android:hint="Select day"
            android:inputType="textMultiLine"
            android:textAlignment="textStart"
            android:textSize="17sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlPhotoToDo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rlDescriptionToDo"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="3dp">

        <TextView
            android:id="@+id/tvPhotoEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="13dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="14dp"
            android:fontFamily="sans-serif-light"
            android:text="Photo:"
            android:textSize="20sp" />

        <ImageButton
            android:id="@+id/btnPhoto"
            android:layout_width="41dp"
            android:layout_height="34dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="116dp"
            android:layout_marginTop="91dp"
            android:background="#00FFFFFF"
            app:srcCompat="@android:drawable/ic_menu_camera" />

        <ImageView
            android:id="@+id/ivImageToDo"
            android:layout_width="96dp"
            android:layout_height="94dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="12dp"
            android:layout_marginTop="61dp"
            app:srcCompat="@drawable/ic_baseline_account_circle_24"
            tools:srcCompat="@tools:sample/avatars" />

    </RelativeLayout>

    <Button
        android:id="@+id/btnCreateReminder"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="150dp"
        android:layout_marginEnd="150dp"
        android:layout_marginBottom="30dp"
        android:gravity="center"
        android:text="Create"
        app:cornerRadius="100dp" />


</RelativeLayout>