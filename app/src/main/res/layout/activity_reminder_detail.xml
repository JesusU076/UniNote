<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ReminderDetailActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvTitleEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="14dp"
            android:layout_marginTop="19dp"
            android:layout_marginEnd="14dp"
            android:fontFamily="sans-serif-light"
            android:text="Title:"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/tvInputTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="-10dp"
            android:layout_marginTop="12dp"
            android:layout_toEndOf="@id/tvTitleEdit"
            android:ems="10"
            android:fontFamily="sans-serif-light"
            android:hint="Title name"
            android:inputType="textPersonName"
            android:textSize="17sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tvHourEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="14dp"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="14dp"
            android:fontFamily="sans-serif-light"
            android:text="Date:"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/etInputDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="-10dp"
            android:layout_marginTop="0dp"
            android:layout_toEndOf="@+id/tvHourEdit"
            android:ems="10"
            android:fontFamily="sans-serif-light"
            android:hint="Select day"
            android:inputType="date"
            android:textSize="17sp" />

        <ImageButton
            android:id="@+id/btnDate"
            android:layout_width="41dp"
            android:layout_height="34dp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="-1dp"
            android:layout_marginTop="4dp"
            android:layout_toEndOf="@+id/etInputDate"
            android:background="#00FFFFFF"
            app:srcCompat="@android:drawable/ic_menu_my_calendar" />

    </RelativeLayout>

</LinearLayout>